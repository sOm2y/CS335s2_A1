<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/header"
        android:layout_width="520dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentTop="true"
        android:background="@drawable/clouds"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Welcome to New Zealand&apos;s leading computer science department. We pride ourselves on the excellence of our staff and our students. "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/header"
        android:layout_alignTop="@+id/header"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="480dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="11dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/header"
        android:layout_alignRight="@+id/header"
        android:layout_below="@+id/header"
        android:layout_marginTop="12dp"
        android:background="#C0C0C0"
        android:text="Department of Computer Science"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#001A33"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignRight="@+id/textView1"
        android:src="@drawable/button_rss" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_marginBottom="10dp"
        android:src="@drawable/t" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView5"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_marginBottom="13dp"
        android:src="@drawable/fb" />

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignRight="@+id/button3"
        android:layout_below="@+id/button1"
        android:layout_marginTop="12dp"
        android:background="#AD9533"
        android:text="Events"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_above="@+id/button4"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/imageView2"
        android:background="#5CADFF"
        android:text="News"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignTop="@+id/button3"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@+id/button4"
        android:background="#A3CC29"
        android:text="Staffs"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        style="@style/AppTheme"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="11dp"
        android:background="#7A0000"
        android:text="Courses"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignRight="@+id/imageView3"
        android:layout_below="@+id/button4"
        android:layout_marginTop="19dp"
        android:background="#C0C0C0"
        android:text="Copyright Â© The University of Auckland     "
        android:textSize="10dp" />
  
</RelativeLayout>